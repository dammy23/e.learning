<div class="page-title">
  <h3>{{title}}</h3>
</div>
<div class="row">

  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">Add {{title}}</div>
      <div class="card-body">
        <h5 class="card-title">Fill all required fields.</h5>
        <div class="col-lg-12">
          <button
            id="btnAdd"
            class="btn btn-primary"
            data-bs-toggle="collapse"
            data-bs-target="#courseDiv"
          >Add Record</button>
        </div>
        <div class="col-lg-12 collapse" id="courseDiv">
          <form
            accept-charset="utf-8"
            id="courseForm"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="name" class="form-label required">Course Title</label>
              <input
                type="text"
                name="name"
                placeholder="Course Title"
                class="form-control"
                required=""
              />
            </div>
            <div class="mb-3">
              <label for="image" class="form-label required">Course Image</label>
              <input
                type="file"
                name="image"
                accept="*.jpg,*.png,*.gif"
                class="form-control"
                required=""
              />
            </div>
            <div class="mb-3">
              <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-12 col-lg-12">
    <div class="card">
      <div class="card-header">All Courses</div>
      <div class="card-body">
        <p class="card-title"></p>
        <table class="table table-hover" id="dataTables-course" width="100%">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>No. of Lessons</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each data}}

              <tr>
                <td>{{math @index "+" 1}}</td>
                <td>{{this.name}}</td>
                <td>{{this.lessons}}</td>
                <td><button
                    class="btn btn-primary edit-course"
                    data-name="{{this.name}}"
                    data-image="{{this.image}}"
                    data-id="{{this.id}}"
                  ><i class="fas fa-edit"></i>Edit</button></td>
                <td><button
                    class="btn btn-danger lesson-course"
                    data-name="{{this.name}}"
                    data-id="{{this.id}}"
                  ><i class="fas fa-book"></i> Lessons</button></td>
                <td><button
                    class="btn btn-danger delete-course"
                    data-name="{{this.name}}"
                    data-id="{{this.id}}"
                    data-image="{{this.image}}"
                  ><i class="fas fa-trash"></i>Delete</button></td>
              </tr>

            {{/each}}

          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>

<button
  type="button"
  class="btn btn-danger hidden"
  data-bs-toggle="modal"
