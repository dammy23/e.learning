<div class="qfc-container">
  <h2>Login</h2>
  <label>Enter your email and password.</label>
  <form id="loginForm">
    <div>
      <div>
        <input
          placeholder="Email"
          type="email"
          name="email"
          id="email"
          required
        />
      </div>
      <div>
        <input
          placeholder="Password"
          type="password"
          name="password"
          id="password"
          required
        />
      </div>

      <div>
        <button type="submit">Submit</button>
      </div>
    </div>
  </form>
</div>