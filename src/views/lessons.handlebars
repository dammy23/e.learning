<div class="row">

  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">Add Lesson</div>
      <div class="card-body">
        <h5 class="card-title">Fill all required fields.</h5>
        <div class="col-lg-12">
          <button
            id="btnAddl"
            class="btn btn-primary"
            data-bs-toggle="collapse"
            data-bs-target="#lessonDiv"
          >Add Record</button>
        </div>
        <div class="col-lg-12 collapse" id="lessonDiv">
          <form
            accept-charset="utf-8"
            id="lessonForm"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="name" class="form-label required">Course</label>
              <select
                name="course_id"
                id="course"
                class="form-control"
                required=""
              >
                <option value="" selected>Select Course</option>
                {{#each courses}}
                  <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>
            <div class="mb-3">
              <label for="name" class="form-label required">Lesson Title</label>
              <input
                type="text"
                name="name"
                placeholder="Lesson Title"
                class="form-control"
                required=""
              />
            </div>
            <div class="mb-3">
              <label for="count" class="form-label required">Position</label>
              <input
                type="number"
                name="count"
                class="form-control"
                required=""
              />
            </div>
            <div class="mb-3">
              <label for="duration" class="form-label required">Duration (in
                minutes)</label>
              <input
                type="number"
                name="duration"
                class="form-control"
                required=""
              />
            </div>
            <div class="mb-3">
              <label
                for="duration"
                class="form-label required"
              >Description</label>
              <input
                type="text"
                name="description"
                class="form-control"
                required=""
              />
            </div>
            <div class="mb-3">
              <label for="type" class="form-label required">Type</label>
              <select
                name="type"
                class="form-control"
                required=""
              >
                <option value="" selected>Select Course</option>
                
                  <option value="0">Video </option>
                  <option value="1">Youtube </option>
                
              </select>
            </div>
            <div class="mb-3">
              <label for="duration" class="form-label required">Video ID/LINK</label>
              <input
                type="text"
                name="video_id"
                class="form-control"
                required=""
              />
            </div>
            <div class="mb-3">
              <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-12 col-lg-12">
    <div class="card">
      <div class="card-header">All Lessons</div>
      <div class="card-body">
        <p class="card-title"></p>
        <div class="table-responsive">
          <table class="table table-hover" id="dataTables-lesson" width="100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Course</th>
                <th>Position</th>
                <th>Duration(in minutes)</th>
                <th>Description</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {{#each lessons}}
                <tr>
                  <td>{{math @index "+" 1}}</td>
                  <td>{{this.name}}</td>
                  <td class="course-tr" data-id="{{course_id}}"></td>
                  <td>{{this.count}}</td>
                  <td>{{this.duration}}</td>
                  <td>{{this.description}}</td>
                  <td><button
                      class="btn btn-primary edit-lesson"
                      data-name="{{this.name}}"
                      data-course="{{this.course_id}}"
                      data-count="{{this.count}}"
                      data-duration="{{this.duration}}"
                      data-description="{{this.description}}"
                      data-video_id="{{this.video_id}}"
                      data-id="{{this.id}}"
                    ><i class="fas fa-edit"></i>Edit</button></td>
                  <td><button
                      class="btn btn-danger delete-lesson"
                      data-id="{{this.id}}"
                    ><i class="fas fa-trash"></i>Delete</button></td>
                </tr>

              {{/each}}

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>

<button
  type="button"
  class="btn btn-danger hidden"
  data-bs-toggle="modal"
  data-bs-target="#form1"
  id="btnModal1"
>
  See Modal with Form
</button>

<div
  class="modal fade"
  id="form1"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <h5 class="modal-title" id="exampleModalLabel1">Update Lesson</h5>
        <button
          type="button"
          class="close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="lessonFormUpdate" method="PUT" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="mb-3">
            <label for="name" class="form-label required">Course</label>
            <select
              name="course_id"
              id="course_id"
              class="form-control"
              required=""
            >
              <option value="" selected>Select Course</option>
              {{#each courses}}
                <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="mb-3">
            <label for="name" class="form-label required">Lesson Title</label>
            <input
              type="text"
              name="name"
              placeholder="Lesson Title"
              class="form-control"
              required=""
              id="lesson_name"
            />
          </div>
          <div class="mb-3">
            <label for="count" class="form-label required">Position</label>
            <input
              type="number"
              name="count"
              class="form-control"
              required=""
              id="count"
            />
          </div>
          <div class="mb-3">
            <label for="duration" class="form-label required">Duration (in
              minutes)</label>
            <input
              type="number"
              name="duration"
              class="form-control"
              required=""
              id="duration"
            />
          </div>
          <div class="mb-3">
            <label
              for="description"
              class="form-label required"
            >Description</label>
            <input
              type="text"
              name="description"
              id="description"
              class="form-control"
              required=""
            />
          </div>
          <div class="mb-3">
            <label for="video_id" class="form-label required">Video ID</label>
            <input
              type="text"
              name="video_id"
              id="video_id"
              class="form-control"
              required=""
            />
          </div>
          <input type="hidden" name="id" id="lrecid" />

        </div>
        <div class="modal-footer border-top-0 d-flex justify-content-center">
          <button type="submit" class="btn btn-success">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>